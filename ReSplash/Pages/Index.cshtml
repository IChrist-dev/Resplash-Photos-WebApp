@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
    
}

<div class="pin-container"> 

    @foreach (var item in Model.Photos)
    {
        string imagePath = "/photos/" + item.FileName;

        <div class="pin-box">
            <img id="image-thumbnail" src="@imagePath" class="mb-2" data-bs-toggle="modal" data-bs-target="#photoModal" data-bs-photo="@item.PhotoId" onclick="displayImage(this)" />
        </div>
        
    }
</div>

<div class="modal fade" id="photoModal" tabindex="-1" aria-labelledby="photoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            
            <div class="modal-body text-center">
                <img src="" id="modal-img" class="img-fluid" />

                <div id="modal-createdby"></div>

                <div id="modal-description"></div>

                <div id="modal-category"></div>

                <div id="modal-tags"></div>
            </div>
            
        </div>
    </div>
</div>








